# PneumoStabSim-Professional sample environment configuration
# Скопируйте этот файл в .env и при необходимости обновите значения.

# Python runtime
PYTHON_VERSION=3.13
PYTHONPATH=
PYTHONIOENCODING=utf-8
PYTHONDONTWRITEBYTECODE=1

# Locale defaults (override as needed)
LANG=C.UTF-8
LC_ALL=C.UTF-8

# Qt SDK targeting 6.10 LTS toolchain
QT_SDK_VERSION=6.10.0
QT_SDK_ROOT=/opt/Qt/6.10.0/gcc_64
QT_SDK_MODULES=qtbase;qtdeclarative;qtquick3d;qtshadertools
QT_INSTALL_LOG=logs/qt_install.log
INSTALL_QT_SDK=0
QSG_RHI_BACKEND=d3d11
QT_QUICK_CONTROLS_STYLE=Basic

# Dependency management
DEPENDENCIES_FILE=requirements.txt
DEPENDENCY_HASHES_ENABLED=false
DEPENDENCY_HASH_LOG=logs/pip_hash_verification.log
UV_ENABLE=0

# Logging and diagnostics
PNEUMOSTABSIM_LOG_LEVEL=INFO
PNEUMOSTABSIM_LOG_DIR=logs
QT_DEBUG_PLUGINS=0
QT_LOGGING_RULES=qt.qpa.*=false;qt.qml.debug=true
APP_LOG_FORMAT=%(asctime)s [%(levelname)s] %(name)s: %(message)s

# Project paths (будут перезаписаны setup_environment.py при необходимости)
PROJECT_ROOT=
SOURCE_DIR=src
TEST_DIR=tests
SCRIPT_DIR=scripts
ASSETS_DIR=assets

# Localization & AI assistants
COPILOT_LANGUAGE=ru
AI_ASSISTANT_PROFILE=docs/ai_assistants.md
