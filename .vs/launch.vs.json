{
  "version": "0.2.1",
  "defaults": {
    "python": {
      "command": "${workspaceRoot}\\.venv\\Scripts\\python.exe",
      "args": [],
      "env": {
        "PYTHONPATH": "${workspaceRoot};${workspaceRoot}/src"
      }
    }
  },
  "configurations": [
    {
      "type": "python",
      "name": "üöÄ PneumoStabSim (Main)",
      "program": "app.py",
      "args": [],
      "currentDir": "${workspaceRoot}",
      "env": {
        "PYTHONPATH": "${workspaceRoot};${workspaceRoot}/src"
      }
    },
    {
      "type": "python",
      "name": "üß™ Test Mode (auto-close 5s)",
      "program": "app.py",
      "args": ["--test-mode"],
      "currentDir": "${workspaceRoot}",
      "env": {
        "PYTHONPATH": "${workspaceRoot};${workspaceRoot}/src"
      }
    },
    {
      "type": "python",
      "name": "üêõ Verbose Mode",
      "program": "app.py",
      "args": ["--verbose"],
      "currentDir": "${workspaceRoot}",
      "env": {
        "PYTHONPATH": "${workspaceRoot};${workspaceRoot}/src"
      }
    },
    {
      "type": "python",
      "name": "üîì Non-blocking Mode",
      "program": "app.py",
      "args": ["--no-block"],
      "currentDir": "${workspaceRoot}",
      "env": {
        "PYTHONPATH": "${workspaceRoot};${workspaceRoot}/src"
      }
    },
    {
      "type": "python",
      "name": "üõ°Ô∏è Safe Mode",
      "program": "app.py",
      "args": ["--safe-mode"],
      "currentDir": "${workspaceRoot}",
      "env": {
        "PYTHONPATH": "${workspaceRoot};${workspaceRoot}/src"
      }
    },
    {
      "type": "python",
      "name": "üß™ Pytest (core, coverage)",
      "module": "pytest",
      "args": [
        "-m",
        "not gui",
        "--cov=src",
        "--cov-report=term-missing",
        "--junitxml",
        "artifacts/vs/junit-core.xml"
      ],
      "currentDir": "${workspaceRoot}",
      "env": {
        "PYTHONPATH": "${workspaceRoot};${workspaceRoot}/src",
        "QT_QPA_PLATFORM": "offscreen"
      }
    },
    {
      "type": "python",
      "name": "üß≠ Pytest (QML/GUI)",
      "module": "pytest",
      "args": [
        "tests/ui",
        "-m",
        "gui",
        "--cov=src",
        "--cov-append",
        "--cov-report=term-missing",
        "--junitxml",
        "artifacts/vs/junit-qml.xml"
      ],
      "currentDir": "${workspaceRoot}",
      "env": {
        "PYTHONPATH": "${workspaceRoot};${workspaceRoot}/src",
        "QT_QPA_PLATFORM": "offscreen"
      }
    },
    {
      "type": "python",
      "name": "üßπ Ruff lint (CI)",
      "module": "ruff",
      "args": [
        "check",
        "src",
        "tests",
        "app.py",
        "tools"
      ],
      "currentDir": "${workspaceRoot}",
      "env": {
        "PYTHONPATH": "${workspaceRoot};${workspaceRoot}/src"
      }
    },
    {
      "type": "python",
      "name": "üé® Ruff format --check",
      "module": "ruff",
      "args": [
        "format",
        "--check",
        "src",
        "tests",
        "app.py",
        "tools"
      ],
      "currentDir": "${workspaceRoot}",
      "env": {
        "PYTHONPATH": "${workspaceRoot};${workspaceRoot}/src"
      }
    },
    {
      "type": "python",
      "name": "üß† Mypy (CI)",
      "module": "mypy",
      "args": [
        "src",
        "tools",
        "app.py",
        "--config-file=pyproject.toml"
      ],
      "currentDir": "${workspaceRoot}",
      "env": {
        "PYTHONPATH": "${workspaceRoot};${workspaceRoot}/src"
      }
    }
  ]
}
