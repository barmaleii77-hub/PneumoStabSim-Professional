{
  "Application": {
    "Name": "PneumoStabSim Professional",
    "Version": "2.0.0",
    "Language": "ru-RU",
    "Theme": "Default"
  },
  "Python": {
    "PythonPath": "",
    "RequiredModules": [
      "numpy",
      "scipy",
      "PySide6",
      "matplotlib",
      "python-dotenv"
    ],
    "ScriptPaths": [
      "src",
      "."
    ]
  },
  "Simulation": {
    "DefaultTimeStep": 0.001,
    "DefaultSimulationTime": 10.0,
    "MaxThreads": 4,
    "EnableGPUAcceleration": true,
    "CacheResults": true,
    "CacheDirectory": "cache"
  },
  "Visualization": {
    "Renderer": "Direct3D11",
    "AntiAliasing": true,
    "VSync": true,
    "MaxFPS": 60,
    "EnableShadows": true,
    "ShadowQuality": "Medium",
    "TextureQuality": "High"
  },
  "Physics": {
    "Solver": "RungeKutta4",
    "Tolerance": 1e-6,
    "MaxIterations": 1000,
    "AdaptiveTimeStep": true
  },
  "Export": {
    "DefaultFormat": "CSV",
    "IncludeMetadata": true,
    "CompressionLevel": "Medium",
    "ExportDirectory": "exports"
  },
  "Logging": {
    "Level": "Information",
    "EnableFileLogging": true,
    "LogDirectory": "logs",
    "MaxLogFiles": 10,
    "MaxLogFileSize": "10MB"
  },
  "Performance": {
    "EnableProfiling": false,
    "ProfileDirectory": "profiles",
    "MonitorMemoryUsage": true,
    "GCSettings": {
      "ServerGC": true,
      "ConcurrentGC": true,
      "LatencyMode": "Interactive"
    }
  },
  "UI": {
    "StartMaximized": false,
    "RememberWindowState": true,
    "AutoSave": true,
    "AutoSaveInterval": 300,
    "ShowSplashScreen": true,
    "EnableTooltips": true
  },
  "Integration": {
    "EnablePythonDebugging": false,
    "PythonDebugPort": 5678,
    "EnableRestAPI": false,
    "RestAPIPort": 8080,
    "EnableWebSocket": false,
    "WebSocketPort": 8081
  }
}
