{
  "Application": {
    "Language": "ru-RU",
    "Theme": "Dark"
  },
  "Python": {
    "PythonPath": "python.exe"
  },
  "Simulation": {
    "EnableGPUAcceleration": false,
    "MaxThreads": 2
  },
  "Visualization": {
    "AntiAliasing": false,
    "EnableShadows": false,
    "ShadowQuality": "Low",
    "MaxFPS": 30
  },
  "Logging": {
    "Level": "Debug",
    "EnableFileLogging": true
  },
  "Performance": {
    "EnableProfiling": true,
    "MonitorMemoryUsage": true
  },
  "Integration": {
    "EnablePythonDebugging": true,
    "PythonDebugPort": 5678,
    "EnableRestAPI": true,
    "RestAPIPort": 8080
  }
}
