{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PneumoStabSim Application Settings",
  "description": "Schema describing the consolidated application configuration.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "current",
    "defaults_snapshot",
    "metadata"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "units_version"
      ],
      "properties": {
        "version": {
          "type": "string"
        },
        "last_modified": {
          "type": "string"
        },
        "units_version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "migration_date": {
          "type": "string"
        },
        "previous_version": {
          "type": "string"
        },
        "units_version_previous": {
          "type": "string"
        },
        "schema_version": {
          "type": "string"
        }
      }
    },
    "current": {
      "$ref": "#/$defs/settingsPayload"
    },
    "defaults_snapshot": {
      "$ref": "#/$defs/settingsPayload"
    }
  },
  "$defs": {
    "settingsPayload": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "graphics": {
          "$ref": "#/$defs/graphics"
        },
        "constants": {
          "$ref": "#/$defs/constants"
        }
      }
    },
    "graphics": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "quality": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "shadows": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "enabled": {"type": "boolean"},
                "resolution": {"type": ["string", "number"]},
                "filter": {"type": ["integer", "number"]},
                "bias": {"type": "number"},
                "darkness": {"type": "number"}
              }
            },
            "antialiasing": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "primary": {"type": "string"},
                "quality": {"type": "string"},
                "post": {"type": "string"}
              }
            },
            "taa_enabled": {"type": "boolean"},
            "taa_strength": {"type": "number"},
            "taa_motion_adaptive": {"type": "boolean"},
            "fxaa_enabled": {"type": "boolean"},
            "specular_aa": {"type": "boolean"},
            "dithering": {"type": "boolean"},
            "render_scale": {"type": "number"},
            "render_policy": {"type": "string"},
            "frame_rate_limit": {"type": "number"},
            "oit": {"type": "string"}
          }
        },
        "materials": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "frame": {"$ref": "#/$defs/material"},
            "lever": {"$ref": "#/$defs/material"},
            "tail": {"$ref": "#/$defs/material"},
            "tail_rod": {"$ref": "#/$defs/material"},
            "cylinder": {"$ref": "#/$defs/material"},
            "piston_body": {"$ref": "#/$defs/material"},
            "piston_rod": {"$ref": "#/$defs/material"},
            "joint_tail": {"$ref": "#/$defs/material"},
            "joint_arm": {"$ref": "#/$defs/material"},
            "joint_rod": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "ok_color": {"type": "string"},
                "error_color": {"type": "string"}
              }
            }
          }
        },
        "animation": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "is_running": {"type": "boolean"},
            "animation_time": {"type": "number"},
            "amplitude": {"type": "number"},
            "frequency": {"type": "number"},
            "phase_global": {"type": "number"},
            "phase_fl": {"type": "number"},
            "phase_fr": {"type": "number"},
            "phase_rl": {"type": "number"},
            "phase_rr": {"type": "number"}
          }
        },
        "scene": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "scale_factor": {"type": "number"},
            "default_clear_color": {"type": "string"},
            "model_base_color": {"type": "string"},
            "model_roughness": {"type": "number"},
            "model_metalness": {"type": "number"}
          }
        }
      }
    },
    "material": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "base_color": {"type": "string"},
        "warning_color": {"type": "string"},
        "metalness": {"type": "number"},
        "roughness": {"type": "number"},
        "specular_amount": {"type": "number"},
        "specular_tint": {"type": "number"},
        "clearcoat": {"type": "number"},
        "clearcoat_roughness": {"type": "number"},
        "transmission": {"type": "number"},
        "opacity": {"type": "number"},
        "ior": {"type": "number"},
        "attenuation_distance": {"type": "number"},
        "attenuation_color": {"type": "string"},
        "emissive_color": {"type": "string"},
        "emissive_intensity": {"type": "number"}
      }
    },
    "constants": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "geometry": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "kinematics": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "track_width_m": {"type": "number"},
                "lever_length_m": {"type": "number"},
                "pivot_offset_from_frame_m": {"type": "number"},
                "rod_attach_fraction": {"type": "number"}
              }
            },
            "cylinder": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "inner_diameter_m": {"type": "number"},
                "rod_diameter_m": {"type": "number"},
                "piston_thickness_m": {"type": "number"},
                "body_length_m": {"type": "number"},
                "dead_zone_rod_m3": {"type": "number"},
                "dead_zone_head_m3": {"type": "number"}
              }
            },
            "visualization": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "arm_radius_m": {"type": "number"},
                "cylinder_radius_m": {"type": "number"},
                "pivot_offset_x_m": {"type": "number"},
                "tail_offset_x_m": {"type": "number"},
                "piston_clip_min_fraction": {"type": "number"},
                "piston_clip_max_fraction": {"type": "number"},
                "max_stroke_fraction": {"type": "number"}
              }
            },
            "initial_state": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "frame_height_m": {"type": "number"},
                "frame_beam_size_m": {"type": "number"},
                "frame_length_m": {"type": "number"},
                "lever_length_m": {"type": "number"},
                "tail_rod_length_m": {"type": "number"},
                "j_arm_left": {"$ref": "#/$defs/vector3"},
                "j_arm_right": {"$ref": "#/$defs/vector3"},
                "j_tail_left": {"$ref": "#/$defs/vector3"},
                "j_tail_right": {"$ref": "#/$defs/vector3"}
              }
            }
          }
        }
      }
    },
    "vector3": {
      "type": "array",
      "items": {"type": "number"},
      "minItems": 3,
      "maxItems": 3
    }
  }
}
