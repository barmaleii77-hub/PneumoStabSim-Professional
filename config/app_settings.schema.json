{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PneumoStabSim Application Settings",
  "description": "Schema describing the consolidated application configuration.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "current",
    "defaults_snapshot",
    "metadata"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "units_version"
      ],
      "properties": {
        "version": {
          "type": "string"
        },
        "last_modified": {
          "type": "string"
        },
        "units_version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "migration_date": {
          "type": "string"
        },
        "previous_version": {
          "type": "string"
        },
        "units_version_previous": {
          "type": "string"
        },
        "schema_version": {
          "type": "string"
        }
      }
    },
    "current": {
      "$ref": "#/$defs/settingsPayload"
    },
    "defaults_snapshot": {
      "$ref": "#/$defs/settingsPayload"
    }
  },
  "$defs": {
    "settingsPayload": {
      "type": "object",
      "properties": {
        "simulation": {
          "type": "object",
          "properties": {
            "physics_dt": {
              "type": "number"
            },
            "render_vsync_hz": {
              "type": "number"
            },
            "max_steps_per_frame": {
              "type": "number"
            },
            "max_frame_time": {
              "type": "number"
            }
          },
          "additionalProperties": true
        },
        "pneumatic": {
          "type": "object",
          "properties": {
            "receiver_volume_limits": {
              "type": "object",
              "properties": {
                "min_m3": {
                  "type": "number"
                },
                "max_m3": {
                  "type": "number"
                }
              },
              "additionalProperties": true
            },
            "receiver_volume": {
              "type": "number"
            },
            "volume_mode": {
              "type": "string"
            },
            "master_isolation_open": {
              "type": "boolean"
            },
            "thermo_mode": {
              "type": "string"
            }
          },
          "additionalProperties": true
        },
        "geometry": {
          "type": "object"
        },
        "graphics": {
          "type": "object",
          "properties": {
            "materials": {
              "type": "object",
              "properties": {
                "frame": {
                  "type": "object"
                },
                "lever": {
                  "type": "object"
                },
                "tail": {
                  "type": "object"
                },
                "cylinder": {
                  "type": "object"
                },
                "piston_body": {
                  "type": "object"
                },
                "piston_rod": {
                  "type": "object"
                },
                "joint_tail": {
                  "type": "object"
                },
                "joint_arm": {
                  "type": "object"
                },
                "joint_rod": {
                  "type": "object"
                }
              },
              "additionalProperties": true
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  }
}
