{
  "projectName": "PneumoStabSim Professional (Insiders)",
  "summary": "High-fidelity pneumothorax stabilisation simulator with QtQuick3D UI, Python backend, and C# launcher hooks.",
  "entryPoints": [
    "app.py",
    "src/core/application.py",
    "src/ui/main_window.py",
    "Program.cs"
  ],
  "primaryLanguages": ["Python", "QML", "C#"],
  "frameworks": [
    "PySide6",
    "QtQuick3D",
    "pytest",
    "structlog"
  ],
  "testCommands": [
    "make check",
    "pytest",
    "ruff check"
  ],
  "environment": {
    "python": "3.13",
    "venv": ".venv",
    "qt": "6.10",
    "minimumVisualStudio": "17.10 Insiders"
  },
  "documentation": [
    "README.md",
    "docs/RENOVATION_MASTER_PLAN.md",
    "docs/ai_assistants.md",
    "VISUAL_STUDIO_INSIDERS_SETUP.md"
  ],
  "notebooks": [],
  "keyDirectories": {
    "src": "Python application modules",
    "assets/qml": "QML and shader assets",
    "tests": "Automated test suite",
    "tools": "Developer tooling scripts"
  },
  "codingConventions": [
    "Use structlog for logging",
    "Avoid blanket exception handlers",
    "Follow ruff + mypy guidance"
  ],
  "ci": {
    "lint": "ruff check src tests tools",
    "typeCheck": "mypy src tools app.py",
    "tests": "pytest --maxfail=1"
  }
}
