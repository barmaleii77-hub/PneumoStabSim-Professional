{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "App: PneumoStabSim (Qt6.10)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}${pathSeparator}${workspaceFolder}/src"
            },
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true,
            "redirectOutput": true,
            "presentation": {
                "group": "application",
                "order": 1
            }
        },
        {
            "name": "Tests: Smoke suite (pytest -k smoke)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "-k",
                "smoke",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}${pathSeparator}${workspaceFolder}/src"
            },
            "justMyCode": false,
            "stopOnEntry": false,
            "presentation": {
                "group": "quality",
                "order": 1
            }
        },
        {
            "name": "Diagnostics: QML asset scan",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/qml_diagnostic.py",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}${pathSeparator}${workspaceFolder}/src"
            },
            "justMyCode": true,
            "stopOnEntry": false,
            "presentation": {
                "group": "quality",
                "order": 2
            }
        },
        {
            "name": "PneumoStabSim (OpenGL, test-mode)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "args": [
                "--test-mode"
            ],
            "console": "integratedTerminal",
            "env": {
                "QSG_RHI_BACKEND": "opengl",
                "QT_QPA_PLATFORM": "xcb"
            }
        },
        {
            "name": "PneumoStabSim (Vulkan, test-mode)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "args": [
                "--test-mode"
            ],
            "console": "integratedTerminal",
            "env": {
                "QSG_RHI_BACKEND": "vulkan",
                "QT_QPA_PLATFORM": "xcb"
            }
        }
    ]
}
