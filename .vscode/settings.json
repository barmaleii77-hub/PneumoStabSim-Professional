{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "[linux]": {
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "qt.qmlls.path": "${workspaceFolder}/.venv/bin/qmlls"
  },
  "[mac]": {
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "qt.qmlls.path": "${workspaceFolder}/.venv/bin/qmlls"
  },
  "[windows]": {
    "python.defaultInterpreterPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
    "qt.qmlls.path": "${workspaceFolder}\\.venv\\Scripts\\qmlls.exe"
  },
  "python.envsPaths": [
    "${workspaceFolder}/.venv"
  ],
  "python.terminal.activateEnvironment": true,
  "github.copilot.enable": {
    "*": true,
    "python": true,
    "qml": true,
    "markdown": true,
    "plaintext": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.chat.localeOverride": "ru",
  "github.copilot.editor.iterativeFixing": true,
  "github.copilot.advanced": {
    "debug.overrideEngine": "",
    "debug.testOverrideProxyUrl": "",
    "debug.overrideProxyUrl": "",
    "authProvider": "github"
  },
  "debug.console.closeOnEnd": false,
  "debug.console.fontSize": 14,
  "debug.console.wordWrap": true,
  "debug.internalConsoleOptions": "openOnSessionStart",
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 88
  },
  "[qml]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": false,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder};${workspaceFolder}\\src",
    "PYTHONIOENCODING": "utf-8",
    "QML2_IMPORT_PATH": "${workspaceFolder}\\.venv\\Lib\\site-packages\\PySide6\\qml;${workspaceFolder}\\assets\\qml",
    "QML_IMPORT_PATH": "${workspaceFolder}\\.venv\\Lib\\site-packages\\PySide6\\qml;${workspaceFolder}\\assets\\qml",
    "QT_PLUGIN_PATH": "${workspaceFolder}\\.venv\\Lib\\site-packages\\PySide6\\plugins",
    "QT_QML_IMPORT_PATH": "${workspaceFolder}\\.venv\\Lib\\site-packages\\PySide6\\qml",
    "QT_QUICK_CONTROLS_STYLE": "Basic",
    "QT_SCALE_FACTOR_ROUNDING_POLICY": "PassThrough",
    "QT_AUTO_SCREEN_SCALE_FACTOR": "1",
    "QSG_RHI_BACKEND": "d3d11"
  },
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src",
    "PYTHONIOENCODING": "utf-8",
    "QML2_IMPORT_PATH": "${workspaceFolder}/.venv/lib/python3.13/site-packages/PySide6/qml:${workspaceFolder}/assets/qml",
    "QML_IMPORT_PATH": "${workspaceFolder}/.venv/lib/python3.13/site-packages/PySide6/qml:${workspaceFolder}/assets/qml",
    "QT_PLUGIN_PATH": "${workspaceFolder}/.venv/lib/python3.13/site-packages/PySide6/plugins",
    "QT_QML_IMPORT_PATH": "${workspaceFolder}/.venv/lib/python3.13/site-packages/PySide6/qml",
    "QT_QUICK_CONTROLS_STYLE": "Basic",
    "QT_SCALE_FACTOR_ROUNDING_POLICY": "PassThrough",
    "QT_AUTO_SCREEN_SCALE_FACTOR": "1",
    "QSG_RHI_BACKEND": "opengl"
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "args": [
        "-NoExit",
        "-Command",
        "[Console]::OutputEncoding=[System.Text.Encoding]::UTF8"
      ]
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [
        "/K",
        "chcp 65001"
      ]
    },
    "Git Bash": {
      "source": "Git Bash"
    }
  },
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.unicodeVersion": "11",
  "terminal.integrated.fontFamily": "Cascadia Code, Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.scrollback": 10000,
  "emmet.includeLanguages": {
    "qml": "html"
  },
  "qt.qmlls.enabled": true,
  "git.ignoreLimitWarning": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "workbench.startupEditor": "readme",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.encoding": "utf8",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.renameSuggestions.triggerAutomatically": true,
  "github.copilot.chat.followUps": "always",
  "github.copilot.chat.useProjectTemplates": true,
  "github.copilot.editor.enableMultilineSuggestions": true,
  "github.copilot.editor.enablePartialAcceptance": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.indexing": true,
  "python.analysis.extraPaths": [
    "${workspaceFolder}/src",
    "${workspaceFolder}/tests",
    "${workspaceFolder}/tools"
  ],
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}/src",
    "${workspaceFolder}/tests",
    "${workspaceFolder}/tools"
  ],
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "git.autofetch": "all",
  "git.autofetchPeriod": 180,
  "git.decorations.enabled": true,
  "git.showPushSuccessNotification": true,
  "git.timeline.showAuthor": true,
  "git.timeline.showUncommitted": true,
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.codeLens": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "search.smartCase": true,
  "files.trimTrailingWhitespace": true,
  "terminal.integrated.enablePersistentSessions": true,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.copyOnSelection": true,
  "workbench.tree.indent": 20,
  "workbench.list.smoothScrolling": true,
  "breadcrumbs.enabled": true
}
