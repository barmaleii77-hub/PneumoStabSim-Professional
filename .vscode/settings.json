{
    "python.defaultInterpreterPath": "./.venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    
    // === GITHUB COPILOT SETTINGS ===
    "github.copilot.enable": {
        "*": true,
        "python": true,
        "qml": true,
        "markdown": true,
        "plaintext": true
    },
    "github.copilot.editor.enableAutoCompletions": true,
    
    // === DEBUGGING SETTINGS ===
    "debug.console.closeOnEnd": false,
    "debug.console.fontSize": 14,
    "debug.console.wordWrap": true,
    "debug.internalConsoleOptions": "openOnSessionStart",
    "debug.openDebug": "openOnDebugBreak",
    "debug.showBreakpointsInOverviewRuler": true,
    "debug.toolBarLocation": "floating",
    
    // === PYTHON SETTINGS (Python 3.13 + Qt 6.10) ===
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length=88"],
    "python.sortImports.args": ["--profile", "black"],
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "basic",
    
    // === TESTING ===
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests",
        "-v",
        "--tb=short"
    ],
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    
    // === FILE ASSOCIATIONS ===
    "files.associations": {
        "*.qml": "qml",
        "*.patch": "diff",
        "*.pyproj": "xml",
        "*.sln": "plaintext"
    },
    
    // === EXCLUSIONS FOR PERFORMANCE ===
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.egg-info": true,
        "**/build": true,
        "**/dist": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.coverage": true,
        "**/logs/*.log": true,
        "**/*.rej": true,
        "**/*.orig": true
    },

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/pycache__": true,
        "**/logs": true,
        "**/build": true,
        "**/dist": true,
        "**/.git": true,
        "**/venv": true,
        "**/.venv": true
    },

    "files.watcherExclude": {
        "**/logs/**": true,
        "**/__pycache__/**": true,
        "**/node_modules/**": true,
        "**/.git/**": true,
        "**/venv/**": true,
        "**/.venv/**": true,
        "**/build/**": true,
        "**/dist/**": true
    },

    // === EDITOR SETTINGS ===
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.rulers": [88],
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 88
    },

    "[qml]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": false,
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 120
    },

    "[json]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },

    // === TERMINAL ENVIRONMENT (Qt 6.10 + Python 3.13) ===
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder};${workspaceFolder}\\src",
        "PYTHONIOENCODING": "utf-8",
        "QT_SCALE_FACTOR_ROUNDING_POLICY": "PassThrough",
        "QT_AUTO_SCREEN_SCALE_FACTOR": "1",
        "QSG_RHI_BACKEND": "d3d11"
    },

    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src",
        "PYTHONIOENCODING": "utf-8",
        "QT_SCALE_FACTOR_ROUNDING_POLICY": "PassThrough",
        "QT_AUTO_SCREEN_SCALE_FACTOR": "1",
        "QSG_RHI_BACKEND": "opengl"
    },

    // === QML SUPPORT (Qt 6.10) ===
    "emmet.includeLanguages": {
        "qml": "html"
    },
    
    // Если установлен Qt extension
    "qt.qmlls.enabled": true,
    "qt.qmlls.path": "",

    // === GIT SETTINGS ===
    "git.ignoreLimitWarning": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    
    // === PERFORMANCE ===
    "editor.semanticHighlighting.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.inlineSuggest.enabled": true,
    
    // === WORKSPACE SPECIFIC ===
    "workbench.startupEditor": "readme",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.encoding": "utf8",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    
    // === F5 DEFAULT CONFIGURATION ===
    "launch": {
        "version": "0.2.0",
        "configurations": []
    }
}
