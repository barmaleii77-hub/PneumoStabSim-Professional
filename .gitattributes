###############################################################################
# Core text normalization â€” keep UTF-8 sources without BOM artefacts.
###############################################################################
* text=auto

###############################################################################
# Python & QML stack (LF endings, UTF-8)
###############################################################################
*.py  text eol=lf working-tree-encoding=UTF-8
*.pyi     text eol=lf working-tree-encoding=UTF-8
*.qml     text eol=lf working-tree-encoding=UTF-8
*.qmltypes text eol=lf working-tree-encoding=UTF-8
*.qrc     text eol=lf working-tree-encoding=UTF-8
*.qsci    text eol=lf working-tree-encoding=UTF-8
*.json    text eol=lf working-tree-encoding=UTF-8
*.toml    text eol=lf working-tree-encoding=UTF-8
*.yaml    text eol=lf working-tree-encoding=UTF-8
*.yml     text eol=lf working-tree-encoding=UTF-8
*.ini     text eol=lf working-tree-encoding=UTF-8
*.cfg     text eol=lf working-tree-encoding=UTF-8
# GLSL sources must stay on LF to avoid QSpirvCompiler parsing issues on Windows.
*.frag    text eol=lf working-tree-encoding=UTF-8
*.vert    text eol=lf working-tree-encoding=UTF-8
*.cmake   text eol=lf working-tree-encoding=UTF-8
*.md text eol=lf working-tree-encoding=UTF-8
*.txt     text eol=lf working-tree-encoding=UTF-8
*.sh      text eol=lf working-tree-encoding=UTF-8

###############################################################################
# Windows-centric tooling (CRLF endings, UTF-8)
###############################################################################
*.ps1     text eol=crlf working-tree-encoding=UTF-8
*.psm1text eol=crlf working-tree-encoding=UTF-8
*.bat     text eol=crlf working-tree-encoding=UTF-8
*.cmd     text eol=crlf working-tree-encoding=UTF-8
*.psd1    text eol=crlf working-tree-encoding=UTF-8

###############################################################################
# Git LFS tracking for large binary assets
###############################################################################
*.hdr filter=lfs diff=lfs merge=lfs -text
*.exr filter=lfs diff=lfs merge=lfs -text
*.NEF filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
