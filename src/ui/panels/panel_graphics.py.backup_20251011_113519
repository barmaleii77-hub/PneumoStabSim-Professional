        self.fog_color = ColorButton(self.current_graphics['fog_color'])
        self.fog_color.color_changed.connect(self.on_fog_color_changed)
        fog_layout.addWidget(self.fog_color, 1, 1)
        
        fog_layout.addWidget(QLabel("–ü–ª–æ—Ç–Ω–æ—Å—Ç—å:"), 2, 0)
        self.fog_density = QDoubleSpinBox()
        self.fog_density.setRange(0.0, 1.0)
        self.fog_density.setSingleStep(0.01)
        self.fog_density.setDecimals(2)
        self.fog_density.setValue(self.current_graphics['fog_density'])
        self.fog_density.valueChanged.connect(self.on_fog_density_changed)
        fog_layout.addWidget(self.fog_density, 2, 1)
        
        layout.addWidget(fog_group)
        
        # ‚úÖ –ö–∞—á–µ—Å—Ç–≤–æ —Ä–µ–Ω–¥–µ—Ä–∏–Ω–≥–∞
        quality_group = QGroupBox("‚öôÔ∏è –ö–∞—á–µ—Å—Ç–≤–æ —Ä–µ–Ω–¥–µ—Ä–∏–Ω–≥–∞")
        quality_layout = QGridLayout(quality_group)
        
        # Antialiasing
        quality_layout.addWidget(QLabel("–°–≥–ª–∞–∂–∏–≤–∞–Ω–∏–µ:"), 0, 0)
        self.antialiasing = QComboBox()
        self.antialiasing.addItems(["–ù–µ—Ç", "SSAA", "MSAA"])
        self.antialiasing.setCurrentIndex(self.current_graphics['antialiasing'])
        self.antialiasing.currentIndexChanged.connect(self.on_antialiasing_changed)
        quality_layout.addWidget(self.antialiasing, 0, 1)
        
        quality_layout.addWidget(QLabel("–ö–∞—á–µ—Å—Ç–≤–æ AA:"), 0, 2)
        self.aa_quality = QComboBox()
        self.aa_quality.addItems(["–ù–∏–∑–∫–æ–µ", "–°—Ä–µ–¥–Ω–µ–µ", "–í—ã—Å–æ–∫–æ–µ"])
        self.aa_quality.setCurrentIndex(self.current_graphics['aa_quality'])
        self.aa_quality.currentIndexChanged.connect(self.on_aa_quality_changed)
        quality_layout.addWidget(self.aa_quality, 0, 3)
        
        # –¢–µ–Ω–∏
        self.shadows_enabled = QCheckBox("–¢–µ–Ω–∏")
        self.shadows_enabled.setChecked(self.current_graphics['shadows_enabled'])
        self.shadows_enabled.toggled.connect(self.on_shadows_toggled)
        quality_layout.addWidget(self.shadows_enabled, 1, 0)
        
        quality_layout.addWidget(QLabel("–ö–∞—á–µ—Å—Ç–≤–æ —Ç–µ–Ω–µ–π:"), 1, 1)
        self.shadow_quality = QComboBox()
        self.shadow_quality.addItems(["–ù–∏–∑–∫–æ–µ", "–°—Ä–µ–¥–Ω–µ–µ", "–í—ã—Å–æ–∫–æ–µ"])
        self.shadow_quality.setCurrentIndex(self.current_graphics['shadow_quality'])
        self.shadow_quality.currentIndexChanged.connect(self.on_shadow_quality_changed)
        quality_layout.addWidget(self.shadow_quality, 1, 2)
        
        # ‚úÖ –ù–û–í–û–ï: –ú—è–≥–∫–æ—Å—Ç—å —Ç–µ–Ω–µ–π
        quality_layout.addWidget(QLabel("–ú—è–≥–∫–æ—Å—Ç—å —Ç–µ–Ω–µ–π:"), 2, 0)
        self.shadow_softness = QDoubleSpinBox()
        self.shadow_softness.setRange(0.0, 2.0)
        self.shadow_softness.setSingleStep(0.1)
        self.shadow_softness.setDecimals(1)
        self.shadow_softness.setValue(self.current_graphics['shadow_softness'])
        self.shadow_softness.valueChanged.connect(self.on_shadow_softness_changed)
        self.shadow_softness.setToolTip("–ú—è–≥–∫–æ—Å—Ç—å –∫—Ä–∞—ë–≤ —Ç–µ–Ω–µ–π (0.0 = —Ä–µ–∑–∫–∏–µ, 2.0 = –æ—á–µ–Ω—å –º—è–≥–∫–∏–µ)")
        quality_layout.addWidget(self.shadow_softness, 2, 1)
        
        layout.addWidget(quality_group)
        
        layout.addStretch()
        scroll.setWidget(widget)
        return scroll
    
    def create_control_buttons(self, layout):
        """–°–æ–∑–¥–∞—Ç—å –∫–Ω–æ–ø–∫–∏ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è –Ω–∞—Å—Ç—Ä–æ–π–∫–∞–º–∏"""
        control_layout = QHBoxLayout()
        
        # –ö–Ω–æ–ø–∫–∞ —Å–±—Ä–æ—Å–∞
        reset_btn = QPushButton("üîÑ –°–±—Ä–æ—Å–∏—Ç—å –≤—Å–µ")
        reset_btn.clicked.connect(self.reset_all_settings)
        control_layout.addWidget(reset_btn)
        
        # –ö–Ω–æ–ø–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è
        save_btn = QPushButton("üíæ –°–æ—Ö—Ä–∞–Ω–∏—Ç—å")
        save_btn.clicked.connect(self.save_settings)
        control_layout.addWidget(save_btn)
        
        # –ö–Ω–æ–ø–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏
        load_btn = QPushButton("üìÇ –ó–∞–≥—Ä—É–∑–∏—Ç—å")
        load_btn.clicked.connect(self.load_settings)
        control_layout.addWidget(load_btn)
        
        layout.addLayout(control_layout)
    
    def reset_material_color(self, color_button, param_name, default_color):
        """–°–±—Ä–æ—Å–∏—Ç—å —Ü–≤–µ—Ç –º–∞—Ç–µ—Ä–∏–∞–ª–∞ –∫ –∑–Ω–∞—á–µ–Ω–∏—é –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é"""
        color_button.set_color(default_color)
        self.current_graphics[param_name] = default_color
        self.emit_material_update()
    
    def apply_preset(self, preset_name: str):
        """–ü—Ä–∏–º–µ–Ω–∏—Ç—å –ø—Ä–µ—Å–µ—Ç –æ—Å–≤–µ—â–µ–Ω–∏—è"""
        presets = {
            'day': {
                'key_brightness': 3.5,
                'key_color': '#ffffff',
                'key_angle_x': -45,
                'key_angle_y': 45,
                'fill_brightness': 1.5,
                'fill_color': '#f0f0ff',
                'point_brightness': 15000,
            },
            'night': {
                'key_brightness': 0.5,
                'key_color': '#4040ff',
                'key_angle_x': -30,
                'key_angle_y': -45,
                'fill_brightness': 0.3,
                'fill_color': '#202040',
                'point_brightness': 25000,
            },
            'industrial': {
                'key_brightness': 2.0,
                'key_color': '#ffffcc',
                'key_angle_x': -60,
                'key_angle_y': 90,
                'fill_brightness': 1.0,
                'fill_color': '#ccccff',
                'point_brightness': 18000,
            },
        }
        
        if preset_name in presets:
            preset = presets[preset_name]
            
            # –û–±–Ω–æ–≤–ª—è–µ–º –ø–∞—Ä–∞–º–µ—Ç—Ä—ã
            for key, value in preset.items():
                if key in self.current_graphics:
                    self.current_graphics[key] = value
            
            # –û–±–Ω–æ–≤–ª—è–µ–º UI
            self.update_ui_from_current_settings()
            
            # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ
            self.emit_lighting_update()
            
            # –°–∏–≥–Ω–∞–ª–∏–∑–∏—Ä—É–µ–º –æ –ø—Ä–∏–º–µ–Ω–µ–Ω–∏–∏ –ø—Ä–µ—Å–µ—Ç–∞
            self.preset_applied.emit(preset_name)
            self.logger.info(f"–ü—Ä–∏–º–µ–Ω—ë–Ω –ø—Ä–µ—Å–µ—Ç –æ—Å–≤–µ—â–µ–Ω–∏—è: {preset_name}")
    
    def reset_all_settings(self):
        """–°–±—Ä–æ—Å–∏—Ç—å –≤—Å–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –∫ –∑–Ω–∞—á–µ–Ω–∏—è–º –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é"""
        # –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ
        reply = QMessageBox.question(
            self,
            "–ü–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ —Å–±—Ä–æ—Å–∞",
            "–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —Å–±—Ä–æ—Å–∏—Ç—å –≤—Å–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –≥—Ä–∞—Ñ–∏–∫–∏ –∫ –∑–Ω–∞—á–µ–Ω–∏—è–º –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é?",
            QMessageBox.StandardButton.Yes | QMessageBox.StandardButton.No,
            QMessageBox.StandardButton.No
        )
        
        if reply == QMessageBox.StandardButton.Yes:
            # –°–±—Ä–æ—Å –∫ –¥–µ—Ñ–æ–ª—Ç–Ω—ã–º –∑–Ω–∞—á–µ–Ω–∏—è–º (–∏–∑ __init__)
            self.__init__(self.parent())
            self.logger.info("–ù–∞—Å—Ç—Ä–æ–π–∫–∏ –≥—Ä–∞—Ñ–∏–∫–∏ —Å–±—Ä–æ—à–µ–Ω—ã –∫ –∑–Ω–∞—á–µ–Ω–∏—è–º –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é")
    
    def save_settings(self):
        """–°–æ—Ö—Ä–∞–Ω–∏—Ç—å –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –≤ —Ñ–∞–π–ª"""
        file_path, _ = QFileDialog.getSaveFileName(
            self,
            "–°–æ—Ö—Ä–∞–Ω–∏—Ç—å –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –≥—Ä–∞—Ñ–∏–∫–∏",
            "",
            "JSON —Ñ–∞–π–ª—ã (*.json);;–í—Å–µ —Ñ–∞–π–ª—ã (*)"
        )
        
        if file_path:
            try:
                with open(file_path, 'w', encoding='utf-8') as f:
                    json.dump(self.current_graphics, f, indent=2, ensure_ascii=False)
                
                QMessageBox.information(
                    self,
                    "–£—Å–ø–µ—Ö",
                    f"–ù–∞—Å—Ç—Ä–æ–π–∫–∏ –≥—Ä–∞—Ñ–∏–∫–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã –≤:\n{file_path}"
                )
                self.logger.info(f"–ù–∞—Å—Ç—Ä–æ–π–∫–∏ –≥—Ä–∞—Ñ–∏–∫–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã: {file_path}")
            except Exception as e:
                QMessageBox.critical(
                    self,
                    "–û—à–∏–±–∫–∞",
                    f"–ù–µ —É–¥–∞–ª–æ—Å—å —Å–æ—Ö—Ä–∞–Ω–∏—Ç—å –Ω–∞—Å—Ç—Ä–æ–π–∫–∏:\n{e}"
                )
                self.logger.error(f"–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –Ω–∞—Å—Ç—Ä–æ–µ–∫: {e}")
    
    def load_settings(self):
        """–ó–∞–≥—Ä—É–∑–∏—Ç—å –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –∏–∑ —Ñ–∞–π–ª–∞"""
        file_path, _ = QFileDialog.getOpenFileName(
            self,
            "–ó–∞–≥—Ä—É–∑–∏—Ç—å –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –≥—Ä–∞—Ñ–∏–∫–∏",
            "",
            "JSON —Ñ–∞–π–ª—ã (*.json);;–í—Å–µ —Ñ–∞–π–ª—ã (*)"
        )
        
        if file_path:
            try:
                with open(file_path, 'r', encoding='utf-8') as f:
                    loaded_settings = json.load(f)
                
                # –û–±–Ω–æ–≤–ª—è–µ–º —Ç–µ–∫—É—â–∏–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
                self.current_graphics.update(loaded_settings)
                
                # –û–±–Ω–æ–≤–ª—è–µ–º UI
                self.update_ui_from_current_settings()
                
                # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –≤—Å–µ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è
                self.emit_lighting_update()
                self.emit_material_update()
                self.emit_environment_update()
                self.emit_quality_update()
                self.emit_camera_update()
                self.emit_effects_update()
                
                QMessageBox.information(
                    self,
                    "–£—Å–ø–µ—Ö",
                    f"–ù–∞—Å—Ç—Ä–æ–π–∫–∏ –≥—Ä–∞—Ñ–∏–∫–∏ –∑–∞–≥—Ä—É–∂–µ–Ω—ã –∏–∑:\n{file_path}"
                )
                self.logger.info(f"–ù–∞—Å—Ç—Ä–æ–π–∫–∏ –≥—Ä–∞—Ñ–∏–∫–∏ –∑–∞–≥—Ä—É–∂–µ–Ω—ã: {file_path}")
            except Exception as e:
                QMessageBox.critical(
                    self,
                    "–û—à–∏–±–∫–∞",
                    f"–ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å –Ω–∞—Å—Ç—Ä–æ–π–∫–∏:\n{e}"
                )
                self.logger.error(f"–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –Ω–∞—Å—Ç—Ä–æ–µ–∫: {e}")
    
    def emit_effects_update(self):
        """–û—Ç–ø—Ä–∞–≤–∏—Ç—å —Å–∏–≥–Ω–∞–ª –æ–± –∏–∑–º–µ–Ω–µ–Ω–∏–∏ –≤–∏–∑—É–∞–ª—å–Ω—ã—Ö —ç—Ñ—Ñ–µ–∫—Ç–æ–≤"""
        effects_params = {
            'bloom_enabled': self.current_graphics['bloom_enabled'],
            'bloom_intensity': self.current_graphics['bloom_intensity'],
            'bloom_threshold': self.current_graphics['bloom_threshold'],  # ‚úÖ –ù–û–í–û–ï: –ü–æ—Ä–æ–≥ Bloom
            'ssao_enabled': self.current_graphics['ssao_enabled'],
            'ssao_intensity': self.current_graphics['ssao_intensity'],
            'ssao_radius': self.current_graphics['ssao_radius'],  # ‚úÖ –ù–û–í–û–ï: –†–∞–¥–∏—É—Å SSAO
            'motion_blur': self.current_graphics['motion_blur'],
            'depth_of_field': self.current_graphics['depth_of_field'],
            'dof_focus_distance': self.current_graphics['dof_focus_distance'],  # ‚úÖ –ù–û–í–û–ï: DoF
            'dof_focus_range': self.current_graphics['dof_focus_range'],  # ‚úÖ –ù–û–í–û–ï: DoF
            'tonemap_enabled': self.current_graphics['tonemap_enabled'],  # ‚úÖ –ù–û–í–û–ï: –¢–æ–Ω–µ–º–∞–ø–ø–∏–Ω–≥
            'tonemap_mode': self.current_graphics['tonemap_mode'],  # ‚úÖ –ù–û–í–û–ï: –¢–æ–Ω–µ–º–∞–ø–ø–∏–Ω–≥–∞
            'vignette_enabled': self.current_graphics['vignette_enabled'],  # ‚úÖ –ù–û–í–û–ï: –í–∏–Ω—å–µ—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ
            'vignette_strength': self.current_graphics['vignette_strength'],  # ‚úÖ –ù–û–í–û–ï: –í–∏–Ω—å–µ—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ
            'lens_flare_enabled': self.current_graphics['lens_flare_enabled'],  # ‚úÖ –ù–û–í–û–ï: Lens Flare
        }
        
        self.logger.info(f"Effects updated: {effects_params}")
        self.effects_changed.emit(effects_params)
    
    def emit_camera_update(self):
        """–û—Ç–ø—Ä–∞–≤–∏—Ç—å —Å–∏–≥–Ω–∞–ª –æ–± –∏–∑–º–µ–Ω–µ–Ω–∏–∏ –∫–∞–º–µ—Ä—ã"""
        camera_params = {
            'camera_fov': self.current_graphics['camera_fov'],
            'camera_near': self.current_graphics['camera_near'],
            'camera_far': self.current_graphics['camera_far'],
            'camera_speed': self.current_graphics['camera_speed'],
            'auto_rotate': self.current_graphics['auto_rotate'],
            'auto_rotate_speed': self.current_graphics['auto_rotate_speed'],
        }
        
        self.logger.info(f"Camera updated: {camera_params}")
        self.camera_changed.emit(camera_params)
    
    def emit_quality_update(self):
        """–û—Ç–ø—Ä–∞–≤–∏—Ç—å —Å–∏–≥–Ω–∞–ª –æ–± –∏–∑–º–µ–Ω–µ–Ω–∏–∏ –∫–∞—á–µ—Å—Ç–≤–∞ —Ä–µ–Ω–¥–µ—Ä–∏–Ω–≥–∞"""
        quality_params = {
            'antialiasing': self.current_graphics['antialiasing'],
            'aa_quality': self.current_graphics['aa_quality'],
            'shadows_enabled': self.current_graphics['shadows_enabled'],
            'shadow_quality': self.current_graphics['shadow_quality'],
            'shadow_softness': self.current_graphics['shadow_softness'],  # ‚úÖ –ù–û–í–û–ï: –ú—è–≥–∫–æ—Å—Ç—å —Ç–µ–Ω–µ–π
        }
        
        self.logger.info(f"Quality updated: {quality_params}")
        self.quality_changed.emit(quality_params)
    
    def emit_lighting_update(self):
        """–û—Ç–ø—Ä–∞–≤–∏—Ç—å —Å–∏–≥–Ω–∞–ª –æ–± –∏–∑–º–µ–Ω–µ–Ω–∏–∏ –æ—Å–≤–µ—â–µ–Ω–∏—è"""
