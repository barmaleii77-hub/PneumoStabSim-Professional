        self.settings = QSettings("PneumoStabSim", "GraphicsPanel")
        
        # ‚úÖ –†–ê–°–®–ò–†–ï–ù–ù–´–ï —Ç–µ–∫—É—â–∏–µ –ø–∞—Ä–∞–º–µ—Ç—Ä—ã –≥—Ä–∞—Ñ–∏–∫–∏ (–ü–û–õ–ù–´–ô –ù–ê–ë–û–†!)
        self.current_graphics = {
